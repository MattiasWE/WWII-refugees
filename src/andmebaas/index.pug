    .sisu.w3-container#artikkel 
        h1= self.title
        .w3-hide#intro
            .w3-text= self.subtitle
            each item in self.mainlist
                li= item
            each paragraph in self.texts
                p= paragraph
        
        .w3-button#newPersonLink(onclick="document.getElementById('newPersonFormRoot').style.display='block'"
            )= self.newPersonForm.linkText

        .w3-row

        form.w3-row#searchform
            input.w3-input.w3-col.l8.w3-round#search(
                type='search', 
                name='q',
                placeholder= self.search.placeholder
            ) 
            button.w3-input.w3-col.l4.w3-round= self.search.button

        #tulemused
            .w3-text.w3-hide#search-count= 0
