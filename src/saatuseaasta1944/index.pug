extends /_templates/html.pug

block body

    include /_templates/navigation.pug

    .sisu.w3-container#artikkel
        h1= self.title
        each paragraph in self.texts
            p= paragraph
        //- p= self.more.label
        //-     a(href=self.more.link)= self.more.text

        - console.log(self.data.saatuseaasta)
        each kuu in self.data.saatuseaasta
            .w3-row
                h2= kuu.kuu
                each artikkel in kuu.artiklid
                    .w3-row.w3-card.w3-margin-bottom(class="wwii-"+artikkel.klass)
                        .w3-third.w3-padding
                            h3= artikkel.pealkiri
                            img(src='/images'+artikkel.pilt, alt=artikkel.pilt_alternate, style="width:100%")
                            //- pildiallkiri
                            .wwii-right.wwii-italic= artikkel.pilt_pealkiri
                        .w3-twothird.w3-padding
                            p= artikkel.l6igud[0]
                            button.w3-button.w3-left-align.w3-block.readmore(onclick='toggleAccordeon(this)')= self.bits.keepReading
                            .accordeon.w3-hide
                                - artikkel.l6igud.shift()
                                each sissekanne in artikkel.l6igud
                                    p= sissekanne
                            .wwii-right.wwii-italic= artikkel.autor
                            .wwii-right.wwii-italic= artikkel.allikas


    include /_templates/footer.pug

