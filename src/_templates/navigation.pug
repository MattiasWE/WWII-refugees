- var self_url = self.path === '/' ? '/' : self.path + '/'
#navigation.w3-row.w3-border
    .w3-col.s12.m6.l4.w3-border
        a#logo.w3-hover-none.w3-border(href=self.navigation[0].url)
            img.w3-image(src=self.logo.image, alt=self.logo.imageAlt)
            .w3-center= self.logo.text
    .w3-col.s12.m6.l8.w3-border
        #navLarge.wwii-nav.w3-bar.w3-hide-small.w3-hide-medium.w3-border
            - var i = 0
            .w3-bar-item.w3-button L
            //- hamburger menu N/A
            each n in self.navigation
                if i++ > 0
                    a.w3-bar-item.w3-button.w3-hover-grayscale.w3-hover-text-black(
                        href=n.url, 
                        class={ 'wwii-aktiivne': n.url === self_url, 'wwii-active': n.url !== self_url }
                        )= n.title
            - var j = 0
            each url, locale in self.otherLocalePaths
                if j++ > 0
                    span.px-3 /
                a.w3-bar-item.w3-button.w3-right.w3-small.w3-hover-grayscale(href=url
                    )= self.language[locale]

        #navMedium.wwii-nav.w3-bar.w3-hide-small.w3-hide-large
            - var i = 0
            .w3-bar-item.w3-button M
