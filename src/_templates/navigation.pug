#navigation.w3-container
    - var self_url = self.path === '/' ? '/' : self.path + '/'
    .w3-bar.wwii-hele.w3-card.w3-small
        - var i = 0
        each url, locale in self.otherLocalePaths
            if i++ > 0
                span.px-3 /
            a.w3-bar-item.w3-button.w3-mobile.w3-right(href=url)= self.language[locale]
    .w3-bar.wwii-hele.w3-card
        - var i = 0
        each n in self.navigation
            if i++ > 0
                a.w3-bar-item.w3-button.w3-mobile.w3-hover-none(href=n.url, class={ 'wwii-valge': n.url === self_url, 'wwii-hesi': n.url !== self_url })= n.title
