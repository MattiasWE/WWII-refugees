// Search result template

.search-result#search-result-template(style='display: none;')
    .search-result-name.w3-round
        span#forename
        span= " "
        span#surname
        button.w3-small.w3-right.w3-round.w3-padding#searchResultFeedbackFormLink= self.searchResultLabels.linkText
    .w3-row
        .search-result-main.w3-col.l4
            .mb-0= self.searchResultLabels.born
                span#birthdate
                span= ", "
                span#birthplace 
            .mb-0= self.searchResultLabels.died
                span#deathdate
                span= ", "
                span#deathplace
            .mb-0= self.searchResultLabels.father
                span#fathername
            .mb-0= self.searchResultLabels.mother
                span#mothername
            #resultId.mb-0
                a.record-link

        .w3-col.l8.search-result-info
            #resultRecords.mt-2.mb-0
                h3= self.searchResultLabels.records
                #result-record-template.result-record.mt-2.mb-0(code='PR-5555555')
                    //- span.record-label Pereregister:
                    a.record-label.record-link.w3-btn(target='_blank')
                    .record-text.mb-1 Lorem Ipsum dolor sit amet
            #resultFamily.mt-2.mb-0
                h3= self.searchResultLabels.family
                #resultFamilyMember.mt-2.mb-0
                    .family-member-full-record
                        span.code
                        span.record
